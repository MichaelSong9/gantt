@model IEnumerable<Gantt.Web.Models.ViewModels.ResourceViewModel>

@{
    ViewBag.Title = "Resources";
}

<h2>Resources</h2>

<p>
    <button type="button" class="btn btn-success btn-xs" onclick="create(this)" data-item="resource" data-url="@Url.Action("CreatePartial", "Resources")">
        <span class="glyphicon glyphicon-plus" style="vertical-align:middle;margin-top: -5px"></span> Add resource
    </button>
</p>
<table class="table table-hover">
    <tr>
        <td align="center">
            <b>#</b>
        </td>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>
@{int counter = 1;}
@foreach (var item in Model) {
    <tr>
        <td align="center">
           @(counter++)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            <button id="edit" type="button" class="btn btn-info btn-xs"  onclick='edit(this)'  data-id=@item.Id data-url='@Url.Action("EditPartial", "Resources")'>
                <span class="glyphicon glyphicon-edit" style="vertical-align:middle;margin-top: -5px"></span> Edit
            </button>
            <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#DeleteModal" data-id=@item.Id data-identifier='@item.FirstName @item.LastName' data-item="resource">
                <span class="glyphicon glyphicon-trash" style="vertical-align:middle;margin-top: -5px"></span> Delete
            </button>
        </td>
    </tr>
}

</table>
